<% include partials/header%>
<div class="ui main container segment">
    <div class="ui huge header">
        Edit <%=blog.title%>
        
    </div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Tittle</label>
            <input type="text" name="blog[title]" id="" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" id="" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
            <!-- <input type="text" name="blog[body]" id="" placeholder="Blog Post Goes Here"> -->
        </div>
        
        <button class="ui big violet basic button" type="submit">Submit</button>
    </form>

</div>
<% include partials/footer %>